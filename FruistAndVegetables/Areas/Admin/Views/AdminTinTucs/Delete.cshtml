@model FruistAndVegetables.Models.TinTuc

@{
    ViewData["Title"] = "Xóa tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ quản trị</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminTinTucs" asp-action="Index">Danh sách tin tức</a>
            <span class="breadcrumb-item active">Xóa tin tức: @Model.Title</span>
        </nav>
    </div>
</div>

<div class="page-header no-gutters has-tab">
    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
        <div class="media align-items-center m-b-15">
            <div class="avatar avatar-image rounded" style="height: 70px; width: 70px;">
                <img src="~/images/pages/@Model.Thumb" alt="@Model.Title">
            </div>
            <div class="m-1-15">
                <h4 class="m-b-0">@Model.Title</h4>
                <p class="text-muted m-b-0">ID: #@Model.PostId</p>
            </div>
        </div>
    </div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#product-overview">Overview</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#product-images">Ảnh đại diện</a>
        </li>
    </ul>
    <div class="container-fluid">
        <div class="tab-content m-t-15">
            <div class="tab-pane fade show active" id="product-overview">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">THÔNG TIN TIN TỨC : @Model.Title</h4>
                        <div class="table-responsive">
                            <form asp-action="Delete" asp-route-id="@Model.PostId">
                                <input type="hidden" asp-for="PostId" />
                                <table class="product-info-table m-t-20">
                                    <tbody>
                                        <tr>
                                            <td>Page Name:</td>
                                            <td class="text-dark font-weight-semibold">@Model.Title</td>
                                        </tr>
                                        <tr>
                                            <td>Alias:</td>
                                            <td>@Model.Alias</td>
                                        </tr>
                                        <tr>
                                            <td>Trạng Thái:</td>
                                            <td>
                                                <div class="checkbox">
                                                    <input asp-for="Published" type="checkbox" id="Published" name="Published">
                                                    <label for="Published">Công khai</label>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="checkbox">
                                                    <input asp-for="IsNewfeed" type="checkbox" id="Published" name="Published">
                                                    <label for="IsNewfeed">Tin mới</label>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="checkbox">
                                                    <input asp-for="IsHot" type="checkbox" id="Published" name="Published">
                                                    <label for="IsHot">Tin nóng</label>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Xác nhận xóa tin tức:</td>
                                            <td>
                                                <button type="submit" class="btn btn-danger btn-tone m-r-5">Xóa</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">THÔNG TIN MÔ TẢ</h4>
                    </div>
                    <div class="card-body">
                        @Html.Raw(Model.Contents)
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="product-images">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <img class="img-fluid" src="~/images/news/@Model.Thumb" alt="Hình ảnh đại diện">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



