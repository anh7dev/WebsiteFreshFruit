@model IEnumerable<FruistAndVegetables.Models.Role>

@{
    ViewData["Title"] = "Quản lý quyền truy cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <h2 class="header-title">Orders List</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Danh sách quyền truy cập</span>
        </nav>
    </div>
</div>
<div class="row m-b-30">
    <div class="col-lg-8">

    </div>
    <div class="col-lg-4 text-right">
        <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminRoles" asp-action="Create">
            <i class="anticon anticon-plus-circle m-r-5"></i>
            <span>Thêm mới quyền truy cập</span>
        </a>
    </div>
</div>

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Danh sách quyền truy cập</span>
        </nav>
    </div>
</div>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Mã định danh</th>
                <th scope="col">Tên quyền truy cập</th>
                <th scope="col">Mô tả</th>
                <th scope="col">Cập nhật thông tin</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.RoleId</th>
                        <td>@item.RoleName</td>
                        <td>@item.Description</td>
                        <td>
                            <a class="btn btn-info btn-tone m-r-5" asp-area="Admin" asp-controller="AdminRoles" , asp-action="Details" asp-route-id="@item.RoleId">Thông tin chi tiết</a>
                            <a class="btn btn-warning btn-tone m-r-5" asp-area="Admin" asp-controller="AdminRoles" , asp-action="Edit" asp-route-id="@item.RoleId">Cập nhật</a>
                            <a class="btn btn-danger btn-tone m-r-5" asp-area="Admin" asp-controller="AdminRoles", asp-action="Delete" asp-route-id="@item.RoleId">Xóa</a> 
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>
